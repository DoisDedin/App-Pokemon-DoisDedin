<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PokemonActivity">


    <include
        android:id="@+id/layout_pokemon"
        layout="@layout/pokemon"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frasepokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O mundo todo em uma flecha."
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/layout_pokemon" />

    <TextView

        android:id="@+id/demage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="DEMAGE"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintTop_toBottomOf="@id/frasepokemon" />

    <TextView
        android:id="@+id/demage_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="DEMAGE"
        android:textSize="20sp"
       app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/frasepokemon" />
    <ProgressBar
        android:id="@+id/demage_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/demage" />

    <TextView
        android:id="@+id/defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DEFENSE"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintTop_toBottomOf="@id/demage_bar" />
    <TextView
        android:id="@+id/defense_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DEFENSE"
        android:textSize="20sp"
     app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/demage_bar" />

    <ProgressBar
        android:id="@+id/defense_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/defense" />

    <TextView
        android:id="@+id/life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LIFE"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintTop_toBottomOf="@id/defense_bar" />
    <TextView
        android:id="@+id/life_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LIFE"
        android:textSize="20sp"
      app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/defense_bar" />

    <ProgressBar
        android:id="@+id/life_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/life" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HEIGHT"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintTop_toBottomOf="@id/life_bar" />
    <TextView
        android:id="@+id/height_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HEIGHT"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/life_bar" />

    <ProgressBar
        android:id="@+id/height_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/height" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="WEIGHT"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintTop_toBottomOf="@id/height_bar" />
    <TextView
        android:id="@+id/weight_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="WEIGHT"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/height_bar" />

    <ProgressBar
        android:id="@+id/weight_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/weight" />

    <TextView
        android:id="@+id/base_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="BASE XP"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintTop_toBottomOf="@id/weight_bar" />
    <TextView
        android:id="@+id/base_xp_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="BASE XP"
        android:textSize="20sp"
       app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/weight_bar" />

    <ProgressBar
        android:id="@+id/base_xp_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineStartInfo"
        app:layout_constraintRight_toRightOf="@id/guidelineEndInfo"
        app:layout_constraintTop_toBottomOf="@id/base_xp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEndInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90" />

</androidx.constraintlayout.widget.ConstraintLayout>